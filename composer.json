{
    "name": "free2er/ed25519",
    "description": "Ed25519 key tools",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Max Pryakhin",
            "email": "m.pryakhin@gmail.com"
        }
    ],
    "autoload": {
